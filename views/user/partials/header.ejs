  <body
    class="leading-normal tracking-normal text-white gradient"
    style="font-family: 'Source Sans Pro', sans-serif"
  >
    <!--Nav-->
    <nav id="header" class="fixed w-full z-30 top-0 text-white overflow-hidden">
      <div
        class="
          w-full
          container
          mx-auto
          flex flex-wrap
          items-center
          justify-between
          mt-0
          py-2
        "
      >
        <div class="pl-4 flex items-center">
          <a
            class="
              toggleColour
              text-blue-600
              no-underline
              hover:no-underline
              font-bold
              text-2xl
              lg:text-4xl
            "
            href="/coursedirectory"
          >
            Course Directory
          </a>
          <div class="hidden">
            <a
              class="
                inline-block
                hidden
                md:block
                text-black
                font-black
                no-underline
                hover:text-gray-800 hover:text-underline
                py-2
                px-4
              "
              ><button
                onclick="opencategory()"
                id="categoriesbutton"
                class="
                  mx-auto
                  lg:mx-0
                  hover:underline
                  bg-blue-600
                  text-white
                  font-bold
                  rounded-md
                  mt-4
                  lg:mt-0
                  py-4
                  px-4
                  shadow
                  opacity-75
                  focus:outline-none focus:shadow-outline
                  transform
                  transition
                  hover:scale-105
                  duration-300
                  ease-in-out
                "
              >
                Categories
              </button></a
            >
          </div>

          <div
            class="
              pl-2
              flex
              items-center
              hidden
              md:block
              border-solid border-2
              bg-white
              rounded-md
              border-black
              ml-4
              py-2
            "
          >
            <form action="/coursedirectory" method="POST">
              <input
                class="w-64 text-black rounded-lg focus:outline-none text-lg"
                list="categories"
                id="category"
                type="text"
                name="category"
                placeholder="Search By Course Code or Name"
                required
              />
              <datalist id="categories">
                <% courses.forEach((course, i)=>{ %>
                <option value="<%=course.course_id%>"></option>
                <option value="<%=course.name%>"><% }) %></option>
              </datalist>

              <button
                class="text-white font-bold px-2 focus:outline-none"
                type="submit"
                name="submit"
              >
                <svg
                  width="21"
                  height="22"
                  viewBox="0 0 21 22"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M16.2403 16.7071L19.7643 20.222M18.9771 9.98856C18.9771 14.9528 14.9528 18.9771 9.98856 18.9771C5.02431 18.9771 1 14.9528 1 9.98856C1 5.02431 5.02431 1 9.98856 1C14.9528 1 18.9771 5.02431 18.9771 9.98856Z"
                    stroke="black"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </button>
            </form>
          </div>
        </div>
        <div class="block xl:hidden pr-4">
          <button
            id="nav-toggle"
            class="
              flex
              items-center
              p-1
              text-black
              hover:text-gray-900
              focus:outline-none focus:shadow-outline
              transform
              transition
              hover:scale-105
              duration-300
              ease-in-out
            "
          >
            <svg
              class="fill-current h-6 w-6"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <title>Menu</title>
              <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
            </svg>
          </button>
        </div>
        <div
          class="
            w-full
            flex-grow
            xl:flex xl:items-center xl:w-auto
            hidden
            mt-2
            xl:mt-0
            bg-white
            xl:bg-transparent
            text-black
            p-4
            xl:p-0
            z-20
          "
          id="nav-content"
        >
          <ul class="list-reset xl:flex xl:justify-end flex-1 items-center">
            <% if(!user){ %>
            <li class="mr-3">
              <a
                class="
                  inline-block
                  text-white
                  font-white
                  no-underline
                  hover:text-underline
                  py-2
                "
                ><button
                  id="navAction"
                  onclick="openModal()"
                  class="
                    bg-blue-600
                    mx-auto
                    xl:mx-0
                    hover:underline
                    font-bold
                    rounded-md
                    mt-4
                    xl:mt-0
                    py-4
                    px-8
                    shadow
                    opacity-75
                    focus:outline-none focus:shadow-outline
                    transform
                    transition
                    hover:scale-105
                    duration-300
                    ease-in-out
                  "
                >
                  Login
                </button></a
              >
            </li>
            <% }else{%>
