                  bg-white
                  rounded-md
                  border-black
                  ml-4
                  py-2
                "
              >
                <form action="/coursedirectory" method="POST">
                  <input
                    class="
                      w-5/6
                      text-black
                      rounded-lg
                      focus:outline-none
                      text-lg
                    "
                    list="categories"
                    id="category"
                    type="text"
                    name="category"
                    placeholder="Search By Course Code or Name"
                    required
                  />
                  <datalist id="categories">
                    <% courses.forEach((course, i)=>{ %>
                    <option value="<%=course.course_id%>"></option>
                    <option value="<%=course.course_name %>"><% }) %></option>
                  </datalist>

                  <button
                    class="text-white font-bold px-2 focus:outline-none"
                    type="submit"
                    name="submit"
                  >
                    <svg
                      width="21"
                      height="22"
                      viewBox="0 0 21 22"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        d="M16.2403 16.7071L19.7643 20.222M18.9771 9.98856C18.9771 14.9528 14.9528 18.9771 9.98856 18.9771C5.02431 18.9771 1 14.9528 1 9.98856C1 5.02431 5.02431 1 9.98856 1C14.9528 1 18.9771 5.02431 18.9771 9.98856Z"
                        stroke="black"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </svg>
                  </button>
                </form>
              </div>
            </li>
            <li class="mr-3">
              <a
                href="/coursedirectory/ask"
                class="
                  ask
                  inline-block
                  text-black
                  font-black
                  no-underline
                  hover:text-gray-800 hover:text-underline
                  py-2
                  px-4
                "
                ><button
                  id="ask"
                  class="
                    mx-auto
                    xl:mx-0
                    hover:underline
                    text-gray-800
                    font-bold
                    mt-4
                    xl:mt-0
                    focus:outline-none focus:shadow-outline
                    transform
                    transition
                    hover:scale-105
                    duration-300
                    ease-in-out
                  "
                >
                  Ask a query
                </button></a
              >
            </li>
            <li class="mr-3">
              <a
                href="/coursedirectory/contribute"
                class="
                  contribute
                  inline-block
                  text-black
                  font-black
                  no-underline
                  hover:text-gray-800 hover:text-underline
                  py-2
                  px-4
                "
                ><button
                  id="contribute"
                  class="
                    mx-auto
                    xl:mx-0
                    hover:underline
                    text-gray-800
                    font-bold
                    mt-4
                    xl:mt-0
                    focus:outline-none focus:shadow-outline
                    transform
                    transition
                    hover:scale-105
                    duration-300
                    ease-in-out
                  "
                >
                  Contribute
                </button></a
              >
            </li>
            <li class="mr-3">
              <a
                class="
                  contribute
                  inline-block
                  text-black
                  font-black
                  no-underline
                  hover:text-gray-800 hover:text-underline
                  py-2
                  px-4
                "
                href="/coursedirectory/admin"
                ><button
                  id="navAction"
                  class="
                    mx-auto
                    xl:mx-0
                    hover:underline
                    text-gray-800
                    font-bold
                    mt-4
                    xl:mt-0
                    focus:outline-none focus:shadow-outline
                    transform
                    transition
                    hover:scale-105
                    duration-300
                    ease-in-out
                  "
                >
                  Admin
                </button></a
              >
            </li>
            <li class="mr-3">
              <a
                class="
                  inline-block
                  text-white
                  font-white
                  no-underline
                  hover:text-underline
                  py-2
                  px-4
                "
                href="/coursedirectory/auth/logout"
                ><button
                  id="navAction"
                  class="
                    bg-blue-600
                    mx-auto
                    xl:mx-0
                    hover:underline
                    font-bold
                    rounded-md
                    mt-4
                    xl:mt-0
                    py-4
                    px-8
                    shadow
                    opacity-75
                    focus:outline-none focus:shadow-outline
                    transform
                    transition
                    hover:scale-105
                    duration-300
                    ease-in-out
                  "
                >
                  Logout
                </button></a
              >
            </li>

            <% } %>
          </ul>
        </div>
      </div>
      <hr class="border-b border-gray-100 opacity-25 my-0 py-0" />
    </nav>
    <div
      id="categories"
      class="
        flex
        fixed
        z-30
        left-80
        top-20
        bg-white
        text-black
        border-black border-solid border-2
        hidden
      "
    >
      <div class="bg-gray-100 w-52">
        <button class="mt-8 font-sans font-bold text-xl text-blue-600 px-10">
          Degree</button
        ><br />
        <button class="mt-3.5 px-10" onclick="openBranch()">B.Tech</button
        ><br />
        <button class="mt-3.5 px-10" onclick="openBranch()">B.Des</button><br />
        <button class="mt-3.5 px-10" onclick="openBranch()">HSS</button><br />
        <button class="mt-3.5 px-10" onclick="openBranch()">M.Tech</button
