            <div class="leading-loose">
                <form class="p-10 bg-white rounded shadow-xl" action="/coursedirectory/admin/add" method="POST">
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="course_id">Id</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="course_id" type="text"
                            name="course_id" required placeholder="Id">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="course_name">Course Name</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="course_name" type="text"
                            name="course_name" required placeholder="Course Name">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="level">Level</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="level" type="text" name="level"
                            required placeholder="Level">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="credits">Credits</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="credits" type="text"
                            name="credits" placeholder="Credits">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="course_desc">Description</label>
                        <textarea class="w-full px-5 py-2 text-gray-700 bg-gray-200 rounded" id="course_desc"
                            name="course_desc" rows="4" placeholder="Description"></textarea>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="instructor">Instructor</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="instructor" type="text" name="instructor" placeholder="Instructor"></input>
                    </div>
